<tr>
  <th scope="row"><%= link_to post.title, post_path(post) %></th>
  <td><%= post.post_state %></td>
  <td><%= post.replies_count %></td>
  <td><%= post.viewed_num %></td>
  <td><%= post.created_at.strftime("%Y-%m-%d") %></td>
  <% if is_self?(current_user)%>
    <td>
      <%= link_to "編輯", edit_post_path(post), class: "btn btn-primary" %>
      <%= link_to "刪除", post_path(post), method: :delete, class: "btn btn-danger" %>
    </td>
  <% end %>
</tr>