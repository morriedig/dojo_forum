<div class="devise_view">
  <div>
    <h2>編輯</h2>
    <%= form_for @user do |f| %>

      <div class="field">
        <%= f.label :nickname, "暱稱" %><br />
        <%= f.text_field :nickname %>
      </div>

      <div class="field">
        <%= f.label :image, "照片" %><br />
        <%= f.file_field :image %>
      </div>

      <div class="field">
        <%= f.label :intro, "介紹" %><br />
        <%= f.text_area :intro, rows: "8" %>
      </div>

      <div class="actions">
        <%= f.submit "送出" %>
      </div>
    <% end %>

    <%= link_to "Back", :back %>
  </div>
</div>