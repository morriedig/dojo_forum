<!DOCTYPE html>
<html>
  <head>
    <title>DojoForum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <%# <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1"> %>
    <div class="container-fluid" id="header" style=" background: #c5c5c5">
      <div class="header">
        <div id="logo">
          <span> <%= link_to "DojoForum", root_path %></span>
        </div>
        <nav>
          <ul>
            <% if current_user %>
              <li><%= link_to current_user.email.split("@").first, user_path(current_user) %></li>
              <li><%= link_to "新增貼文", new_post_path%></li>
              <li><%= link_to('登出', destroy_user_session_path, method: :delete) %></li>
              <li><%= link_to('修改密碼', edit_user_registration_path) %></li>
              <% if current_user.admin? %>
                <li><%= link_to 'Admin後台', admins_post_categories_path %></li>
              <% end %>
            <% else %>
              <li><%= link_to('註冊', new_user_registration_path) %></li>
              <li><%= link_to('登入', new_user_session_path) %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
    <%= yield %>    
  </body>
</html>