<% if post_category %>
    <div class="mt-4 mb-4">
      <div class="row">
      <%# 動態新增區域 %>
        <% posts.each do |post| %>
            <%= render :partial => "posts/post_list", locals: {post: post} %>
        <% end %>
      </div>
      <%= paginate posts, remote: true ,params: { category_id: post_category.id }, theme: 'Dojo' %>
    </div>
<% else %>
    <div class="mt-4 mb-4">
      <div class="row">
        <% posts.each do |post| %>
            <%= render :partial => "posts/post_list", locals: {post: post} %>
        <% end %>
      </div>
      <%= paginate posts, remote: true, theme: 'Dojo' %>
    </div>
<% end %>